<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
>

    <LinearLayout
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:padding="8dp"
                android:src="@drawable/ic_person_black_24dp"
                android:background="@drawable/shape_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:text="Puspa Miladin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:text="Jl. Gajayana No. 50 Malang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/asset_dummy"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <LinearLayout
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_like"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        <TextView
                android:text="100 Orang mendukung ini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:text="Kok fasilitasnya belum diperbaiki ya?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#A0A0A0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
</LinearLayout>