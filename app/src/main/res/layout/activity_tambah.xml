<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_maps"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:padding="8dp"
                            android:src="@drawable/ic_add_location_black_24dp"
                            android:background="@drawable/shape_photo"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>

                    <LinearLayout
                            android:layout_marginStart="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:textColor="@color/colorText"
                                android:id="@+id/txt_location"
                                android:textSize="16sp"
                                android:text="Tambahkan Lokasi Anda"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/v_geofence_status"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <ProgressBar
                                    android:id="@+id/loading_geofence"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />

                            <ImageView
                                    android:visibility="gone"
                                    android:src="@drawable/ic_check"
                                    android:id="@+id/img_geo_status"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp" />

                            <TextView
                                    android:id="@+id/tv_geofence_status"
                                    android:layout_marginStart="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Menghitung geofence..." />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_upload"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="4dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <FrameLayout
                        android:background="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                    <ImageView
                            android:alpha="0.8"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/asset_dummy"
                            android:id="@+id/img_report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </FrameLayout>

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:background="@android:color/white"
                            android:id="@+id/v_instruct_add"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                        <ImageView
                                android:src="@drawable/ic_add_black_24dp"
                                android:layout_width="36dp"
                                android:layout_height="36dp" />

                        <TextView
                                android:layout_marginTop="16dp"
                                android:textSize="16sp"
                                android:text="Tambahkan Foto Untuk Dilaporkan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/v_instruct_change"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                        <ImageView
                                android:src="@drawable/ic_camera_alt_black_24dp"
                                android:layout_width="36dp"
                                android:layout_height="36dp" />

                        <TextView
                                android:textColor="@android:color/white"
                                android:layout_marginTop="16dp"
                                android:textSize="16sp"
                                android:text="Ganti foto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                    </LinearLayout>

                </FrameLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:id="@+id/btn_category"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="16dp"
                    android:layout_marginTop="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <LinearLayout
                        android:gravity="center_vertical"
                        android:background="@android:color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textColor="@color/colorText"
                            android:id="@+id/tv_category"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:text="Pilih Kategori"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="4dp"
                    app:contentPadding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <EditText
                        android:id="@+id/et_caption"
                        android:textColor="@color/colorText"
                        android:background="@android:color/transparent"
                        android:minLines="4"
                        android:gravity="top"
                        android:hint="Tulis Laporan Anda..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                    android:layout_marginTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ProgressBar
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:id="@+id/loading"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                <Button
                        android:id="@+id/btn_submit"
                        android:textColor="@android:color/white"
                        android:minHeight="50dp"
                        android:padding="12dp"
                        android:text="Laporkan"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_btn"
                        android:layout_height="wrap_content" />


            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>